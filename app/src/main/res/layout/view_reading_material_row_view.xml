<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:padding="10dp"
    android:background="@drawable/list_item_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/reading_material_name"
        android:text="name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/divider"
        android:padding="5dp"
        android:layout_toStartOf="@+id/divider"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/reading_material_author"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:layout_below="@id/reading_material_name"
        android:padding="5dp"
        android:text="author"
        android:layout_toLeftOf="@+id/divider"
        android:layout_toStartOf="@+id/divider"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider"
        android:layout_toLeftOf="@+id/reading_material_page_count"
        android:layout_toStartOf="@+id/reading_material_page_count"
        android:layout_width="1px"
        android:layout_height="fill_parent" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/reading_material_page_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:text="64\nPages"
        android:layout_height="wrap_content" />
</RelativeLayout>